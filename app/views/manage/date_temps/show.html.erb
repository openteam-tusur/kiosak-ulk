<div class="col-xs-12 temperature_table">
  <h1>Температура в аудиториях на <%= @date_temp.date_title %></h1>

  <table>
    <tr>
      <th>Аудитория</th>
      <th>Температура</th>
    </tr>
    <% @date_temp.temps.each do |temp| %>
      <tr>
        <td><%= temp.place.number %></td>
        <td><%= temp.temperature %>&deg;С</td>
      </tr>
    <% end %>
  </table>

  <%= link_to "Обновить данные", edit_manage_date_temp_path(@date_temp), class: "btn btn-success" %>
</div>
